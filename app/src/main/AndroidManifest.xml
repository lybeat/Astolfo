<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arturia.astolfo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AstolfoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_astolfo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SwipeTheme">

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AstolfoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.subject.SubjectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.subject.SubjectInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.character.CharacterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.comment.CommentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tag.TagAnimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.subscription.SubscriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.settings.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.settings.LicenseActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
