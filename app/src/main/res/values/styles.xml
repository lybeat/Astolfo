<resources>

    <style name="AstolfoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/color_accent</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="SwipeTheme" parent="AstolfoTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Astolfo.Theme" parent="AstolfoTheme" />

    <style name="Astolfo.Theme.Widget" />

    <style name="Astolfo.Theme.Widget.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="OverflowMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/bg_content</item>
        <item name="android:textColorPrimary">@color/color_content</item>
    </style>

    <style name="Astolfo.Theme.Widget.RecyclerView">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Astolfo.Theme.Widget.RecyclerView.Horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Astolfo.Theme.Widget.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:maxHeight">40px</item>
        <item name="android:minHeight">40px</item>
        <item name="android:maxWidth">40px</item>
        <item name="android:minWidth">40px</item>
        <item name="android:progressDrawable">@drawable/star_bar</item>
    </style>

    <style name="Astolfo.Theme.TextAppearance" />

    <style name="Astolfo.Theme.TextAppearance.Toolbar" />

    <style name="Astolfo.Theme.TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Astolfo.Theme.TextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/color_secondary3</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
